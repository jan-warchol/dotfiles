#!/bin/bash

# Requires color variables from .config/bash/ansi-color-codes.sh

case "$*" in
  *jw-git-examples/*)
    GIT_EMAIL=jan.warchol@gmail.com
    CLONE_OPTS="--config user.email=$GIT_EMAIL"
    ;;
  *jan-warchol/*)
    GIT_EMAIL=jan.warchol@gmail.com
    CLONE_OPTS="--config user.email=$GIT_EMAIL"
    ;;
  git@github.com:scramjet-cloud-platform/*)
    GIT_EMAIL=jan.warchol@scramjet.org
    CLONE_OPTS="--config user.email=$GIT_EMAIL"
    ;;
  *)
esac

git clone --recurse-submodules $CLONE_OPTS "$@" &&

if [ -n "$GIT_EMAIL" ]; then
  echo -e "user.email set to ${_bold}$GIT_EMAIL${_reset}"
else
  echo Not possible to guess which email address to use. Set it manually.
fi
